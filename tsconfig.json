{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ES2020",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "baseUrl": ".",
      "typeRoots": ["*.d.ts", "./node_modules/@types"],
    },
    "include": ["src/**/*", "./tsconfig.json"],
    "exclude": ["node_modules", "dist"]
  }